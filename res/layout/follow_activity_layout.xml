<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical" 
    android:background="@color/background">
        <Button
            android:id="@+id/fenceButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:onClick="startFenceOnClickHandler"
            android:drawableTop="@drawable/fence"
            android:paddingTop="20sp"
            android:layout_margin="20sp"
            android:textSize="20sp"
            android:text="Fence"
            android:textColor="@color/item_list_text"
            android:background="@drawable/button_selector"/>
        	
        <Button
            android:id="@+id/destinationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:onClick="startDestinationOnClickHandler"
            android:drawableTop="@drawable/destination"
            android:paddingTop="20sp"
            android:layout_margin="20sp"
            android:textSize="20sp"
            android:text="Destination"
            android:textColor="@color/item_list_text"
            android:background="@drawable/button_selector"/>

        <Button
            android:id="@+id/pathButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:onClick="startPathOnClickHandler"
            android:drawableTop="@drawable/follow"
            android:paddingTop="20sp"
            android:layout_margin="20sp"
            android:textSize="20sp"
            android:text="Path"
            android:textColor="@color/item_list_text"
            android:background="@drawable/button_selector"/>
</LinearLayout>
