<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:orientation="vertical"
    	android:weightSum="1">
        
            <ImageView
       		 	android:id="@+id/imageViewToSave"
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:layout_gravity="center"
        		android:layout_weight="0.2"
        		android:background="#000000" />

    		<com.followme.adapter.CustomEditText
        		android:id="@+id/inputTitlePhoto"
        		android:layout_width="match_parent"
        		android:layout_height="match_parent"
        		android:layout_weight="0.8"
        		android:ems="10"
        		android:background="#494949"
        		android:hint="Title for the image"
        		android:inputType="textMultiLine" >

        		<requestFocus />
   			</com.followme.adapter.CustomEditText>
    
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:background="#000000"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/done_selector"
            android:onClick="saveOnClickHandler"
            android:text="Save" />
    </RelativeLayout>

</LinearLayout>